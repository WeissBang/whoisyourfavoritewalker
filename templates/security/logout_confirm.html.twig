{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4" style="color: #FF4500;">Confirm Logout</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm" style="background-color: #2B2B2B; border-radius: 10px; border: 1px solid #FF4500;">
                    <div class="card-body text-center">
                        <p style="color: #A9A9A9;">Are you sure you want to log out?</p>

                        <form method="post" action="{{ path('logout') }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('logout') }}">
                            <button type="submit" class="btn btn-lg mt-3" style="background-color: #FF4500; color: #FFFFFF; border: none;">Yes, Log me out</button>
                        </form>

                        <a href="{{ path('homepage') }}" class="btn btn-secondary mt-3">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Remove hover effect on cards */
        .card:hover {
            box-shadow: none;
            transform: none;
        }
    </style>
{% endblock %}