{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4" style="color: #FF4500;">Login</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm" style="background-color: #2B2B2B; border-radius: 10px; border: 1px solid #FF4500;">
                    <div class="card-body">
                        <form method="post" action="{{ path('login') }}">
                        <div class="form-group">
                            <label for="username" style="color: #A9A9A9;">Username:</label>
                            <input type="text" id="username" name="_username" class="form-control" required autofocus>
                        </div>
                    
                        <div class="form-group">
                            <label for="password" style="color: #A9A9A9;">Password:</label>
                            <input type="password" id="password" name="_password" class="form-control" required>
                        </div>
                    
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-lg mt-3" style="background-color: #FF4500; color: #FFFFFF; border: none;">Login</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card:hover {
            box-shadow: none;
            transform: none;
        }
    </style>
{% endblock %}