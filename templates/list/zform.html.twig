{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4" style="color: #FF4500;">Add a New Walker</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm" style="background-color: #2B2B2B; border-radius: 10px; border: 1px solid #FF4500;">
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.name, null, {'label_attr': {'style': 'color: #A9A9A9;'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'style': 'background-color: #1E1E1E; color: #FFFFFF; border: 1px solid #555;'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.description, null, {'label_attr': {'style': 'color: #A9A9A9;'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': 'background-color: #1E1E1E; color: #FFFFFF; border: 1px solid #555; resize: none; height: 100px;'}}) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.image, null, {'label_attr': {'style': 'color: #A9A9A9; display: block;'}}) }}

                            <label class="custom-file-upload" style="display: inline-block;">
                                Choose File
                                {{ form_widget(form.image, {'attr': {'id': 'file-upload', 'class': 'form-control-file', 'style': 'display: none;', 'onchange': 'previewImage(event)'}}) }}
                            </label>

                            {{ form_errors(form.image) }}

                            <div id="image-preview" style="margin-top: 10px;">
                                <img id="image-preview-src" src="" alt="Image Preview" style="max-width: 100px; max-height: 100px; display: none; border-radius: 5px; border: 1px solid #555;">
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.status, null, {'label_attr': {'style': 'color: #A9A9A9;'}}) }}
                            {{ form_widget(form.status, {'attr': {'class': 'form-control', 'style': 'background-color: #1E1E1E; color: #FFFFFF; border: 1px solid #555;'}}) }}
                            {{ form_errors(form.status) }}
                        </div>

                        <div class="form-row mb-3">
                            <div class="col">
                                {{ form_label(form.season, null, {'label_attr': {'style': 'color: #A9A9A9;'}}) }}
                                {{ form_widget(form.season, {'attr': {'class': 'form-control', 'style': 'background-color: #1E1E1E; color: #FFFFFF; border: 1px solid #555;'}}) }}
                                {{ form_errors(form.season) }}
                            </div>
                            <div class="col">
                                {{ form_label(form.episode, null, {'label_attr': {'style': 'color: #A9A9A9;'}}) }}
                                {{ form_widget(form.episode, {'attr': {'class': 'form-control', 'style': 'background-color: #1E1E1E; color: #FFFFFF; border: 1px solid #555;'}}) }}
                                {{ form_errors(form.episode) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.location, null, {'label_attr': {'style': 'color: #A9A9A9;'}}) }}
                            {{ form_widget(form.location, {'attr': {'class': 'form-control', 'style': 'background-color: #1E1E1E; color: #FFFFFF; border: 1px solid #555; border-radius: 5px;'}}) }}
                            {{ form_errors(form.location) }}
                        </div>

                        <div class="form-group text-center">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-lg mt-3', 'style': 'background-color: #FF4500; color: #FFFFFF; border: none;'}}) }}
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.body.style.backgroundImage = "url('{{ asset('images/background3.webp') }}')";
            document.body.style.backgroundSize = "cover";
            document.body.style.backgroundRepeat = "no-repeat";
            document.body.style.backgroundAttachment = "fixed";
            document.body.style.backgroundPosition = "center center";
            document.body.style.color = "white";
        });

        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('image-preview-src');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

{% endblock %}