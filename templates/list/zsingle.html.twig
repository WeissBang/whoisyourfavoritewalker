{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4" style="color: #FF4500;">{{ zombie.name }}</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm" style="background-color: #2B2B2B; border-radius: 10px; border: 1px solid #FF4500;">
                    <div class="card-body text-center">
                        <img src="{{ asset('images/' ~ zombie.image) }}" alt="{{ zombie.name }}" class="img-fluid mb-3" style="max-width: 300px; border-radius: 5px; border: 2px solid #FF4500;">

                        <h5 class="card-title" style="color: #FFFFFF;">{{ zombie.name }}</h5>
                        <p class="card-text" style="color: #A9A9A9;">{{ zombie.description }}</p>
                        <p class="card-text" style="color: #A9A9A9;"><strong>Status:</strong> {{ zombie.status }}</p>
                        <p class="card-text" style="color: #A9A9A9;"><strong>Season:</strong> {{ zombie.season }} | <strong>Episode:</strong> {{ zombie.episode }}</p>
                        <p class="card-text" style="color: #A9A9A9;"><strong>Location:</strong> {{ zombie.location }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Remove hover effect on cards */
        .card:hover {
            box-shadow: none;
            transform: none;
        }
    </style>
{% endblock %}